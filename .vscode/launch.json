    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch SenseTest",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildSenseTest",
            "program": "${workspaceRoot}/SenseTest/bin/Debug/netcoreapp2.0/SenseTest.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch UploadPi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildUploadPi",
            "program": "${workspaceRoot}/UploadPi/bin/Debug/netcoreapp2.0/UploadPi.dll",
            "args": [
                "<source-dir>",
                "<target-address>",
                "<username>",
                "<password>",
                "<target-dir>",
                "<target-executable>"
            ],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}